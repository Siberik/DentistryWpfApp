<Window x:Class="DentistryWpfApp.View.Windows.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="clr-namespace:DentistryWpfApp.View.Controls"
        mc:Ignorable="d"
        Title="AddPatientWindow"
        Height="400"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Assets/Images/icon.png"
        Foreground="{DynamicResource TextPrimaryColor}">

    <Border x:Name="border"
            CornerRadius="8"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderThickness="1" BorderBrush="Gray"
            MouseDown="Border_MouseDown" 
            MouseUp="Border_MouseUp" 
            MouseMove="Border_MouseMove">

        <Grid>
            <Grid>
                <StackPanel  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">
                    <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton" Cursor="Hand"/>
                    <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
                </StackPanel>

                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30">

                    <StackPanel>
                        <TextBlock Text="Добавить пользователя:" FontSize="20" Height="24"></TextBlock>
                    </StackPanel>
                </Viewbox>

                <Viewbox Margin="0,75,0,10" Height="NaN">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <!-- Раздел 1 -->
                        <StackPanel Grid.Row="0" Visibility="Visible" Name="Section1">

                            <StackPanel Margin="0,20" Orientation="Horizontal" >

                                <StackPanel Grid.Column="0"  HorizontalAlignment="Center">
                                    <TextBlock Text="Фамилия:" Margin="0,7"/>
                                    <TextBlock Text="Имя:" Margin="0,5"/>
                                    <TextBlock Text="Отчество:" Margin="0,6"/>
                                    <TextBlock Text="Телефон:" Margin="0,5"/>
                                    <TextBlock Text="Адрес:" Margin="0,5"/>
                                    <TextBlock Margin="0,7"><Run Text="Профессия:"/><LineBreak/><Run/></TextBlock>
                                    <TextBlock Text="Дата рождения:" Margin="0,-5"/>
                                    <TextBlock Text="Лечащий врач:" Margin="0,15"/>
                                    <TextBlock Text="Пол:" Margin="0,5"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="20,0,0,0" HorizontalAlignment="Center">
                                    <TextBox MinWidth="150" x:Name="LastNameTextBox" Margin="0,5"/>
                                    <TextBox MinWidth="150" x:Name="NameTextBox" Margin="0,5"/>
                                    <TextBox MinWidth="150" x:Name="SurnameTextBox" Margin="0,5"/>
                                    <TextBox MinWidth="150" x:Name="PhoneTextBox" Margin="0,5"/>
                                    <TextBox MinWidth="150" x:Name="AdressTextBox" Margin="0,5"/>
                                    <TextBox MinWidth="150" x:Name="ProfTextBox" Margin="0,5"/>
                                    <DatePicker MinWidth="150" x:Name="ClientsDatePicker" Margin="0,5"/>
                                    <ComboBox  MinWidth="150" x:Name="DentistComboBox" Margin="0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="MaleRadioButton"  Foreground="{DynamicResource TextPrimaryColor}" Content="М" Margin="0,5" Checked="RadioButton_Checked"/>
                                        <RadioButton x:Name="FemaleRadioButton" Foreground="{DynamicResource TextPrimaryColor}" Content="Ж" Margin="10,5" Checked="RadioButton_Checked"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>


                            <Button x:Name="NextButton" HorizontalAlignment="Right" Margin="10,0" Click="NextButton_Click" Foreground="{DynamicResource TextPrimaryColor}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Далее" VerticalAlignment="Center"/>
                                            <Path Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"
                      Data="M0,0 L4,4 L0,8 Z" Fill="{TemplateBinding Foreground}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>


                        </StackPanel>

                        <!-- Раздел 2 -->
                        <StackPanel Grid.Row="0" Visibility="Collapsed" Name="Section2">

                            <!-- Здесь размещаем содержимое второго раздела -->

                            <StackPanel>
                                <StackPanel>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="8 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="7 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="6 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="5 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="4 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="3 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="2 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="1 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="1 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="2 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="3 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="4 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="5 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="6 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="7 " HorizontalAlignment="Center" TextAlignment="Center" />
                                            <TextBlock Text="8" HorizontalAlignment="Center" TextAlignment="Center" />
                                        </StackPanel>

                                        <controls:EditableTable  x:Name="EditTableDent" Grid.Row="1" Rows="4" Columns="16" Initialized="EditableTable_Initialized" CellTextChanged="EditableTable_CellTextChanged" HorizontalAlignment="Center" />
                                    </Grid>
                                </StackPanel>

                            </StackPanel>

                            <Button x:Name="SaveButton" HorizontalAlignment="Center" Content="Сохранить" IsDefault="True" Click="SaveButtonClick" MinWidth="200" Style="{DynamicResource SaveButtonStyle}" Tag="{DynamicResource confirm}" />
                            <Button x:Name="BackButton" HorizontalAlignment="Left" Margin="10,0" Click="BackButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Path Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M4,0 L0,4 L4,8 Z" Fill="{TemplateBinding Foreground}" Margin="0,0,5,0"/>
                                            <TextBlock Grid.Column="1" Text="Назад" VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        
                    </Grid>
                </Viewbox>

            </Grid>

        </Grid>

    </Border>
</Window>
