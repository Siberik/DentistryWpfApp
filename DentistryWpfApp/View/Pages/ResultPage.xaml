<Page x:Class="DentistryWpfApp.View.Pages.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DentistryWpfApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultPage">

    <Viewbox Height="Auto" Width="600">
        <DockPanel>
            <!-- Разделы страницы -->
            <StackPanel x:Name="Section1" Margin="0,20,0,0" Visibility="Visible" DockPanel.Dock="Top">
                <!-- Код раздела 1 -->
                <!-- ... -->
                <Viewbox>
                    <Grid>
                        <StackPanel Width="600">
                            <TextBlock Text="Составление протокола" FontSize="30" FontWeight="Bold" Margin="0,20,0,0"/>
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Жалобы пациента" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBox FontSize="14" x:Name="СomplaintsTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>
                            </StackPanel>

                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Перенесённые и сопутствующие заболевания" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBox FontSize="14" Name="TransferredDiseasesTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>
                            </StackPanel>

                            <!-- Блок "Диагноз" -->
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Диагноз" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBox FontSize="14" TextWrapping="Wrap" x:Name="DiagnosisTextBox" AcceptsReturn="True" Height="120"/>
                            </StackPanel>
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Развитие настоящего заболевания" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBox FontSize="14" Name="RealDiseaseTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>
                            </StackPanel>
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Выберите услугу:" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="servicesComboBox" DisplayMemberPath="Services_Code" SelectedValuePath="Services_Id"/>
                                <Button Margin="0,10" HorizontalAlignment="Center" Click="AddServiceButton_Click" Content="Добавить"/>
                            </StackPanel>
                            <StackPanel Margin="0,20,0,0" x:Name="servicesContainer" Orientation="Horizontal"/>

                           
                        </StackPanel>
                    </Grid>
                </Viewbox>
            </StackPanel>

            <StackPanel x:Name="Section2" Margin="0,20,0,0" Visibility="Collapsed" DockPanel.Dock="Top">
                <!-- Код раздела 2 -->
                <!-- ... -->
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Состояние слизистой оболочки"  FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox FontSize="14" TextWrapping="Wrap" x:Name="MucousMembraneTextBox" AcceptsReturn="True" Height="120"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Данные рентгеновские исследования" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox FontSize="14" Name="RentgenTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Результаты лечения (эпикриз)" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox FontSize="14" Name="ResultTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Наставления"  FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox FontSize="14" Name="SovetTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>
                </StackPanel>
            </StackPanel>

           
        
            <!-- Кнопка "NextButton" -->
            <Button x:Name="NextButton" Margin="10" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Далее" Click="NextButton_Click" DockPanel.Dock="Bottom" />

        </DockPanel>
    </Viewbox>

</Page> 