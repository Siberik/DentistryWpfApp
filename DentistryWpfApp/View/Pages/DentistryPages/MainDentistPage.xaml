                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel  VerticalAlignment="Top" Margin="0,50,0,0" HorizontalAlignment="Center" Orientation="Vertical" >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Button Width="150" Height="150" Margin="5">

                        <Button.Resources>
