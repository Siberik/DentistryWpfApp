<Page x:Class="DentistryWpfApp.View.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DentistryWpfApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Foreground="{StaticResource MainColorForeground}" Background="{StaticResource MainColorBackground}"
     >

    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Имя пользователя" Margin="10"/>
            <TextBox x:Name="AuthorizationTextBox"/>
            <TextBlock Text="Пароль" Margin="10"/>
            <PasswordBox x:Name="AuthPasswordBox"/>
            <Button Content="Авторизация" Margin="30" Name="AuthorizeButton" Click="AuthorizeButtonClick" Style="{StaticResource AuthorizationButton}"/>
        </StackPanel>
    </Grid>
</Page>
