<Page x:Class="DentistryWpfApp.View.Pages.RedactingPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DentistryWpfApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RedactingPatientPage">

    <Grid>

        <Viewbox Grid.Row="1">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20">
                <TextBox x:Name="LastNameTextBox" Margin="0,10"/>
                <TextBox x:Name="NameTextBox" Margin="0,10"/>
                <TextBox x:Name="SurnameTextBox" Margin="0,10"/>
                <TextBox x:Name="PhoneTextBox" Margin="0,10"/>
                <Button Content="Сохранить" x:Name="SaveButton" Click="SaveButtonClick"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
