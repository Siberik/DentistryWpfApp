<Page x:Class="DentistryWpfApp.View.Pages.NotesDentistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DentistryWpfApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotesDentistPage" Foreground="{DynamicResource TextPrimaryColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Фамилия клиента:" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox Name="ClientNameTextBox" Width="200" VerticalAlignment="Center"/>
            <TextBlock Text="Дата:" Margin="20,0,10,0" VerticalAlignment="Center"/>
            <DatePicker Name="RegistrationDatePicker" Width="150" VerticalAlignment="Center"/>
            <Button Content="Применить фильтр" Margin="20,0" Click="OnFilterButtonClicked"/>
        </StackPanel>
        <Viewbox Grid.Row="1">
            <StackPanel Name="VisitsStackPanel"/>
        </Viewbox>
    </Grid>

</Page>
