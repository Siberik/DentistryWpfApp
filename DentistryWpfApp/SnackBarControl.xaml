<UserControl x:Class="DentistryWpfApp.SnackBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DentistryWpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="Gray" Margin="10" CornerRadius="5" VerticalAlignment="Bottom" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="MessageTextBlock" Text="{Binding Message}" Foreground="Red" Margin="10" FontSize="18" HorizontalAlignment="Center"/>
                <Button Content="OK" Margin="10" Width="80" HorizontalAlignment="Center" Grid.Row="1" Click="Button_Click" Foreground="{DynamicResource TextSecundaryColor}"/>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
