<Page x:Class="DentistryWpfApp.View.Pages.RedactingPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DentistryWpfApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RedactingPatientPage">

    <Grid>

        <Viewbox Grid.Row="1">
            <StackPanel VerticalAlignment="Top"  Margin="0,20"  >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Margin="0,0,10,0" Text="Фамилия:" VerticalAlignment="Center"></TextBlock>
                    <TextBox x:Name="LastNameTextBox" MinWidth="150" HorizontalAlignment="Stretch" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Margin="0,0,10,0" Text="Имя:" VerticalAlignment="Center"></TextBlock>
                    <TextBox x:Name="NameTextBox"  MinWidth="150" Margin="0,10" HorizontalAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,10,0" Text="Отчество" VerticalAlignment="Center"></TextBlock>
                    <TextBox x:Name="SurnameTextBox"  Margin="0,10" MinWidth="150" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,10,0" Text="Телефон:" VerticalAlignment="Center"></TextBlock>
                    <TextBox x:Name="PhoneTextBox"  MinWidth="150"  HorizontalAlignment="Stretch" Margin="0,10,0,20"/>
                </StackPanel>
                <Button x:Name="SaveButton" Content="Сохранить" HorizontalAlignment="Center" Click="SaveButtonClick" Style="{DynamicResource SaveButtonStyle}" Tag="{DynamicResource confirm}"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
